
<h1>Danh sách đơn hàng</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Ngày đặt hàng</th>
            <th scope="col">ID Người dùng</th>
            <th scope="col">Địa chỉ</th>
            <th scope="col">Tổng cộng</th>
            <th scope="col">Số điện thoại</th>
            <th scope="col">&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        {{#each orders}}
        <tr>
            <td>{{OrderID}}</td>
            <td>{{OrderDate}}</td>
            <td>{{UserID}}</td>
            <td>{{Address}}</td>
            <td>{{Total}}</td>
            <td>{{Phone}}</td>
            <td class="text-right">
                <a class="btn btn-danger" href="/admin/orders/delete?id={{OrderID}}" role="button">
                    <i class="fa fa-trash" aria-hidden="true"></i>
                </a>

            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
